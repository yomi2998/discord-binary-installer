#!/usr/bin/env bash

# detect flag
CANARY=false
for arg; do
  [[ $arg == "--canary" ]] && CANARY=true
done

if $CANARY; then
  DIR="DiscordCanary"
  DESKTOP="discord-canary.desktop"
else
  DIR="Discord"
  DESKTOP="discord.desktop"
fi

rm -rf "$HOME"/.discord-binaries/"$DIR" "$HOME"/.local/share/applications/"$DESKTOP"
echo "Removed $DIR"
